<p id="notice"><%= notice %></p>

<h1>People</h1>
<br>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Height</th>
      <th scope="col">Weight</th>
      <th scope="col">IMC</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.age %></td>
        <td><%= person.height %></td>
        <td><%= person.weight %></td>
        <td><%= person.weight/(person.height*person.height) %></td>
        <td><%= link_to image_tag("show", size:"25x25", alt:"show"), person %></td>
        <td><%= link_to image_tag("edit", size:"25x25", alt:"edit"), edit_person_path(person) %></td>
        <td><%= link_to image_tag("delet", size:"25x25", alt:"delet "), person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path, class:"btn btn-dark "%>
